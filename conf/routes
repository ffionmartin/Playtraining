# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /login                              controllers.Application.index

#GET         /hjkh                              controllers.Auth.welcome


GET         /animals                            controllers.Application.listAnimals
POST        /create-animal                      controllers.Application.createAnimal
GET         /load                               controllers.Application.findByIndex(index: Int)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           controllers.Assets.at(path="/public", file)



