# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /home                               controllers.Application.index

GET         /animals                            controllers.Application.listAnimals
POST        /create-animal                      controllers.Application.createAnimal
#GET        /load                              controllers.ItemManagementController.editItem(index: Int)
GET         /load                               controllers.Application.findByIndex(index: Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           controllers.Assets.at(path="/public", file)




