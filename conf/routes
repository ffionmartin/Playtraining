# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /login                              controllers.Application.index

#GET         /hello                              controllers.Application.hello

GET         /animals                            controllers.Application.listAnimals
POST        /create-animal                      controllers.Application.createAnimal
GET         /load                               controllers.Application.findByIndex(index: Int)


GET         /authenticated                      controllers.CompositionController.authenticated


GET         /lang/:lang/:uri                    controllers.LanguageController.switchToLanguage(lang: String, uri: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                           controllers.Assets.at(path="/public", file)



